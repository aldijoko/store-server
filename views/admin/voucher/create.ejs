
<% include ../../partials/header.ejs %>
<% include ../../partials/navbar.ejs %>
<% include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Voucher</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
              <li class="breadcrumb-item active">Tambah Voucher</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Voucher</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="form-group">
                        <label for="name">Game Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Masukkan Nama Game" name="name" required>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select class="form-control select2" style="width: 100%;" name="category" required>
                          <option selected="selected">Choose Category</option>
                          <% categoryData.forEach(category => { %>
                            <option value="<%= category._id %>"><%= category.name %></option>
                          <% }) %>
                          
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Nominal</label>
                        <div class="select2-blue">
                            <select class="form-control select2" multiple="multiple" style="width: 100%;" name="nominals" required data-placeholder="Choose Nominal">
                                
                                <% nominalData.forEach(nominal => { %>
                                  <option value="<%= nominal._id %>"><%= nominal.coinName %> <%= nominal.price %></option>
                                <% }) %>
                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="image">Insert Image Name</label>
                        <input type="file" class="form-control" id="image" placeholder="Insert Image" name="image">
                        <br>
                        <img src="" id="preview">
                    </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>


          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <% include ../../partials/footer.ejs %>
  <% include ../../partials/js.ejs %>

  <script>
    function readURL(input) {
        if(input.files && input.files[0]) {
            const render = new FileReader();
            render.onload = function(e) {
                $('#preview').attr('src', e.target.result);
                $('#preview').attr('width', '20%');
                $('#preview').attr('height', '20%');
            }

            render.readAsDataURL(input.files[0]);
        }
    }

    $('#image').change(function() {
        readURL(this);
    });
  </script>